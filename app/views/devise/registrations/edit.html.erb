<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <h2>Actualizar Usuario </h2><br /><br />

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.text_field :firstname, autofocus: true, class:'form-group', placeholder:'Nombre' %>
      </div>

      <div class="form-group">
        <%= f.text_field :lastname, autofocus: true, class:'form-group', placeholder:'Apellido' %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class:'form-group', placeholder:'Email' %>
      </div>


      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres minimo)(Dejar en blanco si no deseas cambiarla)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class:'form-group', placeholder:'Password' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-group', placeholder:'Confirmar Password' %>
      </div>

      <div class="field">
      <i>(necesitamos tu password actual para poder actualizar datos)</i><br />
        <%= f.password_field :current_password, autocomplete: "off", class:'form-group', placeholder:'Password Actual' %> 
      </div>

      <div class="actions">
        <%= f.submit "Actualizar", class:'btn btn-primary' %>
      </div>
    <% end %>

    <h3>Borrar mi cuenta :(</h3>

    <p>No contento? <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Seguro?" }, method: :delete, class:'btn btn-danger' %></p>

  </div>
</div>