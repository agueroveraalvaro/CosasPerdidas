<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <h2>Ingresar</h2><br />

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, class:'form-group', placeholder:'Email' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", class:'form-group', placeholder:'Password' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me, class:'form-group' %> Recordar
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Ingresar", class:'btn btn-primary' %>
        <%= link_to "OlvidÃ³ su Password", new_user_password_path, class:'btn btn-primary' %>
      </div>
    <% end %>

  </div>
</div>

