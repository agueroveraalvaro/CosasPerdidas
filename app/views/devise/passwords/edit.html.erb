<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
    <h2>Cambiar mi Password</h2><br /><br />

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres minimo)(Dejar en blanco si no deseas cambiarla)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class:'form-group', placeholder:'Password' %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-group', placeholder:'Confirmar Password' %>
      </div>

      <div class="actions">
        <%= f.submit "Cambiar mi password", class:'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>
