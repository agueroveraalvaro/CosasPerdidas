<p id="notice"><%= notice %></p>

<h1>Things</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Visits</th>
      <th>User</th>
      <th>Imagen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @things.each do |thing| %>
      <tr>
        <td><%= link_to thing.name, thing %></td>
        <td><%= thing.description %></td>
        <td><%= thing.visits %></td>
        <td><%= thing.user.email %></td>
        <td><%= image_tag(thing.photo1_url, :width => 65, :height => 75) if thing.photo1.present? %></td>
        <td><%= link_to 'Show', thing %></td>
        <td><%= link_to 'Edit', edit_thing_path(thing) %></td>
        <td><%= link_to 'Destroy', thing, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @things %>

<br>

<%= link_to 'New Thing', new_thing_path, class: 'waves-effect waves-light btn' %>
