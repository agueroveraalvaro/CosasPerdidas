<p id="notice"><%= notice %></p>

<%= search_form_for @q do |t| %>

  <%= t.label :Busqueda %>
  <%= t.search_field :name_or_description_cont %>

  <%= t.select :category_id_eq, options_from_collection_for_select(Category.all, "id", "name", @q.category_id_eq), include_blank: "Todas" %>

  <%= t.submit %>

  <% end %>

<h1>Things</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Visits</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @things.each do |thing| %>
      <tr>
        <td><%= link_to thing.name, thing %></td>
        <td><%= thing.description %></td>
        <td><%= thing.visits %></td>
        <td><%= thing.user.email %></td>
        <td><%= link_to 'Show', thing %></td>
        <td><%= link_to 'Edit', edit_thing_path(thing) %></td>
        <td><%= link_to 'Destroy', thing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Thing', new_thing_path %>
